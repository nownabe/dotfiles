{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(bun test:*)",
      "Bash(bunx @nownabe/claude-tools:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue status:*)",
      "Bash(gh label list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr status:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list *)",
      "Bash(gh run view *)",
      "Bash(gh run watch *)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(go test:*)",
      "Bash(npm info:*)",
      "mcp__plugin_context7_context7__*",
      "mcp__plugin_playwright_playwright__*",
      "WebFetch",
      "WebSearch"
    ],
    "ask": [
      "Bash(gh api:*)",
      "Bash(gh issue close:*)"
    ],
    "deny": [
      "Bash(git -C :*)",
      "Bash(gh pr merge:*)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(sudo *)",
      "Read(**/.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*.crt)",
      "Read(**/*.cer)",
      "Read(**/*credentials*)",
      "Read(**/*secret*)",
      "Read(**/*token*)",
      "Read(**/.netrc)",
      "Read(**/.npmrc)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.gcloud/**)"
    ]
  },
  "model": "opus",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "extraKnownMarketplaces": {
    "nownabe-marketplace": {
      "source": {
        "source": "github",
        "repo": "nownabe/claude"
      }
    },
    "knowledge-work-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/knowledge-work-plugins"
      }
    }
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "playwright@claude-plugins-official": true,
    "hello-world@nownabe-marketplace": true,
    "base@nownabe-marketplace": true,
    "productivity@knowledge-work-plugins": true,
    "sales@knowledge-work-plugins": true,
    "customer-support@knowledge-work-plugins": true,
    "product-management@knowledge-work-plugins": true,
    "marketing@knowledge-work-plugins": true,
    "legal@knowledge-work-plugins": true,
    "finance@knowledge-work-plugins": true,
    "data@knowledge-work-plugins": true,
    "enterprise-search@knowledge-work-plugins": true,
    "bio-research@knowledge-work-plugins": true,
    "cowork-plugin-management@knowledge-work-plugins": true
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline-command.sh"
  }
}

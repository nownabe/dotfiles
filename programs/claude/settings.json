{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(go test:*)",
      "mcp__plugin_context7_context7__*",
      "mcp__plugin_playwright_playwright__*",
      "WebSearch"
    ],
    "ask": [
      "Bash(gh issue close:*)"
    ],
    "deny": [
      "Bash(gh pr merge:*)",
      "Read(**/.envrc)",
      "Read(**/.env*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify-windows \"Claude Code\" \"Task completed - Ready for next input\" > /dev/null 2>&1"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/notify-windows \"Claude Code\" \"Claude is awaiting your response\" > /dev/null 2>&1"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "playwright@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/scripts/statusline-command.sh"
  }
}

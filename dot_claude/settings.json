{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(go test:*)"
    ],
    "deny": []
  },
  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Task completed - Ready for next input\" > /dev/null 2>&1"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Claude is awaiting your response\" > /dev/null 2>&1"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "playwright@claude-plugins-official": true
  },
  "statusLine": {
    "type": "command",
    "command": "/home/nownabe/.claude/statusline-command.sh"
  }
}

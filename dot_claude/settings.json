{
  "permissions": {
    "allow": ["Bash(grep:*)", "Bash(find:*)", "Bash(go test:*)"],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Task completed - Ready for next input\" > /dev/null 2>&1"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Claude is awaiting your response\" > /dev/null 2>&1"
          }
        ]
      }
    ]
  }
}

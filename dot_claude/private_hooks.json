{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Task completed - Ready for next input\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-windows \"Claude Code\" \"Claude is awaiting your response\""
          }
        ]
      }
    ]
  }
}
